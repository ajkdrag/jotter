{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "custom-variant",
          "apply",
          "layer",
          "theme",
          "screen",
          "import",
          "plugin",
          "utility",
          "variant",
          "source",
          "reference"
        ]
      }
    ],
    "lightness-notation": null,
    "hue-degree-notation": null,
    "at-rule-empty-line-before": null,
    "selector-class-pattern": null,
    "comment-empty-line-before": null
  }
}
