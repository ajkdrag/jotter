{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jotter",
  "version": "0.1.0",
  "identifier": "com.jotter.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDM0RGNzg2ODMwQ0FBMjUKUldRbHFneURodmM5M09ycnNiTjNQdlROdjRzM2MrQ3lzRmU2Q3Bac1ZJVGV1UU4vOW5zMWc3dE0K",
      "endpoints": [
        "https://github.com/ajkdrag/jotter/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "jotter",
        "width": 1200,
        "height": 820,
        "resizable": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob: jotter-asset:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src ipc: http://ipc.localhost"
    }
  }
}
